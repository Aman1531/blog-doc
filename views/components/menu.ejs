<%# Menu toggle %>
<span id="menuLink" class="menu-link" tabindex="0">
	<%# Hamburger icon %>
	<span></span>
</span>

<%# Menu %>
<div id="menu">
	<div class="pure-menu">
		<a href="/" class="pure-menu-heading">BLOG-DOC</a>

		<% let links = {archive: "Archive" , tags: "Tags", doc: "Documentation", license: "License", search: "Search"}
		%>
		<ul class="pure-menu-list">
			<% for (let link in links) { %><%#
			<!-- Get each menu link value -->
			%><% let linkValue = links[link] %>
			<li class="pure-menu-item">
				<a <% if (locals.build || locals.dynamic) { %>
					href="/<%= link %>.html" <% } else { %> href="/<%= link %>" <% } %> class="pure-menu-link"><%#
					<!-- Added comment for readability -->
					%><%= linkValue %>
				</a>
			</li>
			<% } %>
		</ul>
	</div>
</div>
